@model Models.CurrencyConversion[];
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Currency Converter</h1>
    <form method="post">
        <div class="form-group">
            <label for="source">Source</label>
            <select id="source" name="source" class="form-control">
                <option value="USD">USD</option>
                <option value="EUR">EUR</option>
                <option value="JPY">JPY</option>
                <option value="GBP">GBP</option>
                <option value="AUD">AUD</option>
                <option value="CAD">CAD</option>
                <option value="CHF">CHF</option>
                <option value="CNY">CNY</option>
                <option value="SEK">SEK</option>
                <option value="NZD">NZD</option>
            </select>
        </div>
        <div class="form-group">
            <label for="target">Target</label>
            <select id="target" name="target" class="form-control">
                <option value="USD">USD</option>
                <option value="EUR">EUR</option>
                <option value="JPY">JPY</option>
                <option value="GBP">GBP</option>
                <option value="AUD">AUD</option>
                <option value="CAD">CAD</option>
                <option value="CHF">CHF</option>
                <option value="CNY">CNY</option>
                <option value="SEK">SEK</option>
                <option value="NZD">NZD</option>
            </select>
        </div>
        <div class="form-group">
            <label for="value">Value</label>
            <input id="value" name="value" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Convert</button>
    </form>
    
    <table id="conversions" class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Source</th>
                <th>Target</th>
                <th>Value</th>
                <th>Result</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var conversion in Model) {
                <tr>
                    <td>@conversion.Date.ToString("MMMM d yyyy")</td>
                    <td>@conversion.Source</td>
                    <td>@conversion.Target</td>
                    <td>@conversion.Value</td>
                    <td>@conversion.Result</td>
                </tr>
            }
        </tbody>
    </table>
</div>